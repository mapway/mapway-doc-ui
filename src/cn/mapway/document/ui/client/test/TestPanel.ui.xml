<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:cn.mapway.document.ui.client.main">
	<ui:style>
	.top {
		background-color: #f0f0f0;
		border-top: 1px solid white;
	}
	
	.center {
		padding: 5px;
	}
	
	.titletext {
		font-weight: bold;
		padding: 5px 0px;
	}
	
	.btnImage {
		border: solid 1px skyblue;
		background: white;
		margin-top: 3px;
	}
	
	.btnImage:HOVER {
		background-color: #f0f0f0;
	}
	
	.input {
		height: 28px;
		line-height: 28px;
	}
	
	.json {
		padding: 5px;
	}
	</ui:style>
	<g:DockLayoutPanel width="800px" height="526px">
		<g:north size="64">
			<g:HorizontalPanel width="100%" height="60px"
				verticalAlignment="middle" spacing="5" styleName="{style.top}">
				<g:cell>
					<g:HTMLPanel>
						<g:Label ui:field="lbTitle" styleName="{style.titletext}"></g:Label>
						<g:Label ui:field="lbUrl"></g:Label>
					</g:HTMLPanel>
				</g:cell>
				<g:cell horizontalAlignment="right">
					<g:HorizontalPanel spacing="3" verticalAlignment="middle">
						<g:Image ui:field="imgLoadding" visible="false" width="48px"
							height="40px"></g:Image>
						<g:Button ui:field="btnExecute" text="运行"></g:Button>
						<g:Button ui:field="btnClose" text="关闭"></g:Button>
					</g:HorizontalPanel>

				</g:cell>
			</g:HorizontalPanel>
		</g:north>
		<g:center>
			<g:HTMLPanel styleName="{style.center}">
				<g:HorizontalPanel width="100%" spacing="5">
					<g:cell width="49%">
						<g:HTMLPanel>
							<g:HorizontalPanel spacing="2"
								verticalAlignment="middle">
								<g:Label text="用户TOKEN"></g:Label>
								<g:TextBox ui:field="txtCustomToken" styleName="{style.input}"></g:TextBox>
								<g:Image ui:field="btnHistory" width="28px" height="28px"
									styleName="{style.btnImage}"></g:Image>
							</g:HorizontalPanel>
							<g:TextArea ui:field="txtInput" width="100%" height="400px">
							</g:TextArea>
						</g:HTMLPanel>

					</g:cell>
					<g:cell>
						<g:ScrollPanel width="100%" height="100%">
							<g:HTMLPanel>
								<g:HorizontalPanel spacing="2"
									verticalAlignment="middle">
									<g:Label text="网关TOKEN"></g:Label>
									<g:TextBox ui:field="txtGatewayToken" styleName="{style.input}"></g:TextBox>
								</g:HorizontalPanel>
								<m:JsonPanel ui:field="txtOutput" styleName="{style.json}"></m:JsonPanel>
							</g:HTMLPanel>

						</g:ScrollPanel>
					</g:cell>
				</g:HorizontalPanel>
			</g:HTMLPanel>

		</g:center>

	</g:DockLayoutPanel>
</ui:UiBinder> 