<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:cn.mapway.document.ui.client.main">
	<ui:style>
	.top {
		background-color: #404040;
		color: white;
	}
	
	.left {
		background-color: #f0f0f0;
	}
	
	.title {
		font-size: 22px;
		padding-left: 10px;
	}
	
	.logo {
		margin-left: 15px;
	}
	</ui:style>
	<g:DockLayoutPanel>
		<g:north size="70">
			<g:HTMLPanel styleName="{style.top}">
				<g:HorizontalPanel height="70px"
					verticalAlignment="middle">
					<g:Image ui:field="logo" width="45px" height="45px"
						styleName="{style.logo}"></g:Image>
					<g:Label text="接口文档" ui:field="lbTitle" styleName="{style.title}"></g:Label>
				</g:HorizontalPanel>
			</g:HTMLPanel>
		</g:north>
		<g:west size="300">
			<g:ScrollPanel styleName="{style.left}">
				<m:ApiTree ui:field="apiTree"></m:ApiTree>
			</g:ScrollPanel>
		</g:west>
		<g:center>
			<g:ScrollPanel ui:field="content"></g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 