<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:cn.mapway.document.ui.client.main">
	<ui:style>
	.top {
		background-color: #404040;
		color: white;
	}
	
	.left {
		background-color: #f0f0f0;
	}
	
	.title {
		font-size: 22px;
		padding-left: 10px;
	}
	
	.logo {
		margin-left: 15px;
	}
	
	.content {
		padding-bottom: 50px;
	}
	
	.subtitle {
		color: skyblue;
		font-size: 12px;
		padding-left: 10px;
	}
	
	.bottom {
		background-color: #606060;
		color: #f0f0f0;
	}
	</ui:style>
	<g:DockLayoutPanel>
		<g:north size="70">

			<g:HorizontalPanel styleName="{style.top}"
				verticalAlignment="middle" width="100%">
				<g:cell>
					<g:HorizontalPanel height="70px"
						verticalAlignment="middle">
						<g:Image ui:field="logo" width="45px" height="45px"
							styleName="{style.logo}"></g:Image>
						<g:VerticalPanel>

							<g:Label text="接口文档" ui:field="lbTitle" styleName="{style.title}"></g:Label>
							<g:Label ui:field="lbSubtitle" styleName="{style.subtitle}"></g:Label>
						</g:VerticalPanel>
					</g:HorizontalPanel>
				</g:cell>
				<g:cell horizontalAlignment="right">
					<g:HorizontalPanel ui:field="tools"
						verticalAlignment="middle" spacing="5">

					</g:HorizontalPanel>
				</g:cell>
			</g:HorizontalPanel>


		</g:north>
		<g:south size="45">
			<g:HorizontalPanel height="45px" styleName="{style.bottom}"
				width="100%" verticalAlignment="middle" spacing="5">
				<g:HTML ui:field="lbCopy"></g:HTML>
				<g:cell horizontalAlignment="right">

					<g:Anchor ui:field="anchorDomain"></g:Anchor>
				</g:cell>
			</g:HorizontalPanel>
		</g:south>
		<g:west size="350">
			<g:ScrollPanel styleName="{style.left}">
				<m:ApiTree ui:field="apiTree"></m:ApiTree>
			</g:ScrollPanel>
		</g:west>

		<g:center>
			<g:ScrollPanel ui:field="content" styleName="{style.content}"></g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 